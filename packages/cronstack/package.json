{
  "name": "cronstack",
  "version": "0.1.0",
  "description": "Advanced cron job scheduler for Node.js",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "license": "MIT",
  "repository": "github:shahradelahi/node-cronstack",
  "homepage": "https://github.com/shahradelahi/node-cronstack#readme",
  "type": "module",
  "main": "dist/lib.cjs",
  "module": "dist/lib.js",
  "types": "dist/lib.d.cts",
  "bin": {
    "cronstack": "dist/cli.js"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/lib.d.ts",
        "default": "./dist/lib.js"
      },
      "require": {
        "types": "./dist/lib.d.cts",
        "default": "./dist/lib.cjs"
      }
    }
  },
  "files": [
    "dist/**"
  ],
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "mocha \"**/*.test.ts\"",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm run format:check && pnpm lint && pnpm build"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "commander": "^12.1.0",
    "cron": "^3.1.7",
    "cronstrue": "^2.50.0",
    "debounce": "^2.1.0",
    "deepmerge": "^4.3.1",
    "dotenv": "^16.4.5",
    "execa": "^9.3.0",
    "ora": "^8.0.1",
    "p-safe": "^1.0.0",
    "tsup": "^8.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.12",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.0",
    "@sindresorhus/tsconfig": "^6.0.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.9",
    "chai": "^5.1.1",
    "mocha": "^10.5.2",
    "prettier": "^3.3.2",
    "tsx": "^4.16.0",
    "type-fest": "^4.20.1",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "cron": "^3"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org",
    "provenance": true
  }
}
